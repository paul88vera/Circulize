{
  "name": "circulize-app",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.js",
  "scripts": {
    "run all": "concurrently \"npm run server\" \"npm run client\" \"npm run watch:tailwind\"",
    "server": "cd server && nodemon server.js",
    "client": "cd client && react-scripts start",
    "build": "cd client && react-scripts build",
    "installer": "npm i",
    "watch:tailwind": "postcss -w client/src/tailwind.css -o client/src/tailwind.generated.css"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.7.6",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^9.8.8",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "mongodb": "^5.1.0",
    "mongoose": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.5",
    "react-router-dom": "^6.4.3",
    "react-scripts": "^5.0.1",
    "save-dev": "^0.0.1-security",
    "tailwindcss": "^3.2.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.21"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
